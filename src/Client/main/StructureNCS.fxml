<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<GridPane fx:controller="Client.main.newChat"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="0" vgap="0"
          styleClass="root"
          fx:id="makeChatWindow">
    <VBox xmlns:fx="http://javafx.com/fxml" alignment="top_left"
            prefHeight="600"
            minWidth="80"
            fx:id="sidebar"
            GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Button text="New Chat"
                fx:id="newChatMCW"
                alignment="CENTER"/>
    </VBox>

    <GridPane
            xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="0" vgap="0"
            styleClass="root"
            fx:id="newChatArea"
            GridPane.columnIndex="1" GridPane.rowIndex="0">
        <VBox xmlns:fx="http://javafx.com/fxml" alignment="top_left"
              GridPane.columnIndex="0" GridPane.rowIndex="0"
              fx:id="userListVBox">
            <ListView xmlns:fx="http://javafx.com/fxml"
                      fx:id="users">
            </ListView>

        </VBox>
        <VBox xmlns:fx="http://javafx.com/fxml" alignment="top_left"
              GridPane.columnIndex="1" GridPane.rowIndex="0"
              fx:id="chatUsersVBox">
            <ListView xmlns:fx="http://javafx.com/fxml"
                      fx:id="selectedUsers">
            </ListView>

        </VBox>
        <HBox xmlns:fx="http://javafx.com/fxml" alignment="bottom_right"
              GridPane.columnIndex="1" GridPane.rowIndex="1"
              fx:id="makeChatButtons">
            <Button text="Submit"
                    fx:id="makeChatMCW"
                    onAction="#makeNewChat"
                    alignment="CENTER"/>
            <Button text="Cancel"
                    fx:id="cancelChatMCW"
                    onAction="#cancelNewChat"
                    alignment="CENTER"/>
        </HBox>

    </GridPane>
</GridPane>