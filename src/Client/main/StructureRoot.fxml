<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:controller="Client.main.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="0" vgap="0"
          styleClass="root"
          fx:id="root">

    <VBox
            xmlns:fx="http://javafx.com/fxml" alignment="top_left"
            prefHeight="600"
            minWidth="80"
            fx:id="sidebar"
            GridPane.columnIndex="0" GridPane.rowIndex="0">
        <children>
            <Button text="-------"
                    styleClass="chatSelectButton"
                    fx:id="ChatButton1"
                    onAction="#clientButtonSelected"
                    alignment="CENTER"/>

            <Button text="New Chat"
                    fx:id="newChat"
                    onAction="#newChatButtonAction"
                    alignment="CENTER"/>
        </children>

    </VBox>

    <GridPane
            xmlns:fx="http://javafx.com/fxml" alignment="BOTTOM_CENTER" hgap="0" vgap="0"
            fx:id="chatArea"
            GridPane.columnIndex="1" GridPane.rowIndex="0">
        <GridPane
                xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
                fx:id="chatOutput"
                GridPane.columnIndex="0" GridPane.rowIndex="0">
            <TextArea fx:id="feedBack" editable="false" focusTraversable="false"
                      layoutX="203.0" layoutY="32.0" prefHeight="800.0" prefWidth="600.0"
                      wrapText="true"/>
        </GridPane>
        <GridPane
                xmlns:fx="http://javafx.com/fxml" alignment="BOTTOM_CENTER" hgap="0" vgap="0"
                fx:id="chatInput"
                GridPane.columnIndex="0" GridPane.rowIndex="1">
            <TextField
                    GridPane.columnIndex="0" GridPane.rowIndex="0"
                    fx:id="chatInputText"
                    prefWidth="600"
                    alignment="CENTER_LEFT"
            />
            <Button text="Send"
                    onAction="#chatSubmitButtonAction"
                    GridPane.columnIndex="1" GridPane.rowIndex="0"
            />

        </GridPane>

    </GridPane>


</GridPane>



